{
    "name": "planets",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "update-module": "tsx ../../.scripts/update-module.ts",
        "build": "pnpm run build:component & pnpm run build:state & pnpm run build:implementation",
        "build:component": "tsc -b && vite build --config .configs/vite.config.component.ts",
        "build:state": "tsc -b && vite build --config .configs/vite.config.state.ts",
        "build:implementation": "tsc -b && vite build --config .configs/vite.config.implementation.ts",
        "lint": "eslint ."
    },
    "dependencies": {
        "@babel/plugin-proposal-decorators": "^7.25.9",
        "@types/node": "^22.14.0",
        "classnames": "^2.5.1",
        "mobx": "^6.13.7",
        "mobx-react-lite": "^4.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.21.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.4",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.2.0"
    },
    "peerDependencies": {
        "react": "18.2.0",
        "react-dom": "18.2.0"
    }
}